{
  "expo": {
    "name": "sleep-cycles-app",
    "slug": "sleep-cycles-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    // Notifications configuration
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#4f46e5"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "tu.bundle.sleepcycles",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "Esta app utiliza notificaciones para recordarte cuándo dormir o despertar según tus ciclos de sueño."
      }
    }
  }
}
